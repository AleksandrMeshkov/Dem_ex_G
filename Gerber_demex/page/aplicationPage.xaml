<Page x:Class="Gerber_demex.page.aplicationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Gerber_demex.page"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Заявки" Background="White">

    <Grid>
        <ScrollViewer>
            <ItemsControl x:Name="PartnersList" Margin="10">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border  BorderBrush="#0C4882" BorderThickness="1" Padding="10" Margin="0,0,0,10">
                            <StackPanel>
                                <DockPanel>
                                    <TextBlock Text="{Binding PartnerTypeName}" 
                                        FontSize="20"
                                        Foreground="#0C4882"
                                        FontFamily="Bahnschrift Light SemiCondensed"
                                        DockPanel.Dock="Left"/>
                                    <TextBlock Text="{Binding TotalCostString}" 
                                        FontSize="20"
                                        Foreground="#0C4882"
                                        FontFamily="Bahnschrift Light SemiCondensed"
                                        HorizontalAlignment="Right"
                                        DockPanel.Dock="Right"/>
                                </DockPanel>

                                <TextBlock Text="{Binding FullAddress}" 
                                           FontFamily="Bahnschrift Light SemiCondensed"
                                           FontSize="15"
                                           Foreground="#0C4882"
                                           Margin="0,5,0,0"/>

                                <TextBlock Text="{Binding Phone}"
                                           FontSize="15"
                                           Foreground="#0C4882"
                                           FontFamily="Bahnschrift Light SemiCondensed"
                                           Margin="0,5,0,0"/>

                                <TextBlock Text="{Binding RatingString}"
                                           FontSize="15"
                                           Foreground="#0C4882"
                                           FontFamily="Bahnschrift Light SemiCondensed"
                                           Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>
