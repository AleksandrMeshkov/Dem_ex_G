<Page x:Class="Gerber_demex.page.menuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Gerber_demex.page"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="menuPage" Background="White">


    <Grid Grid.Row="1">
        <Button x:Name="Zayavki" 
            Content="Добавление/редактирование" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Center" 
            Click="ClickCrud" 
            Width="200" 
            Height="35">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="#0C4882" 
                        CornerRadius="5">
                        <TextBlock Text="{TemplateBinding Content}" 
                               Foreground="White"
                               FontFamily="Bahnschrift Light SemiCondensed"
                               FontSize="14"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button x:Name="CrudPanel" 
                Content="Заявки" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center" 
                Click="clickZayavki" 
                Width="200"
                Margin="0,100,0,0"
                Height="35">    
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="#0C4882" 
                CornerRadius="5">
                        <TextBlock Text="{TemplateBinding Content}" 
                       Foreground="White"
                       FontFamily="Bahnschrift Light SemiCondensed"
                       FontSize="14"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <TextBlock Grid.ColumnSpan="2" 
           HorizontalAlignment="Center" 
           VerticalAlignment="Center" 
           Width="130"
           FontFamily="Bahnschrift Light SemiCondensed"
           Height="60"
           Margin="0,0,0,150"
           Foreground="#0C4882"
           FontSize="55">Меню
           
        </TextBlock>


    </Grid>
</Page>
