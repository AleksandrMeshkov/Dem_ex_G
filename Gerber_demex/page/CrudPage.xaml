<Page x:Class="Gerber_demex.page.CrudPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Gerber_demex.page"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Управление заявками" Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Управление заявками" 
                   FontSize="20" FontWeight="Bold" 
                   Margin="10" HorizontalAlignment="Center"/>

        <DataGrid x:Name="dgRequests" Grid.Row="1" Margin="10"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  SelectionChanged="dgRequests_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID заявки" Binding="{Binding Request_id}" Width="80"/>
                <DataGridTextColumn Header="Продукт" Binding="{Binding Product.Name}" Width="200"/>
                <DataGridTextColumn Header="Партнер" Binding="{Binding Partner.Name}" Width="200"/>
                <DataGridTextColumn Header="Количество" Binding="{Binding Count}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button x:Name="btnAdd" Content="Добавить" Click="btnAdd_Click" Margin="5" Width="100"/>
            <Button x:Name="btnEdit" Content="Изменить" Click="btnEdit_Click" Margin="5" Width="100"/>
            <Button x:Name="btnDelete" Content="Удалить" Click="btnDelete_Click" Margin="5" Width="100"/>
        </StackPanel>
    </Grid>
</Page>