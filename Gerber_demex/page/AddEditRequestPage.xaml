<Page x:Class="Gerber_demex.page.AddEditRequestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Gerber_demex.page"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Добавление/Редактирование заявки" 
      Background="White">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Форма заявки" 
                   FontSize="18" FontWeight="Bold" 
                   Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1" Width="400">
            <TextBlock Text="Продукт:" Margin="0,0,0,5"/>
            <ComboBox x:Name="cbProduct" DisplayMemberPath="Name" 
                     SelectedValuePath="Product_id" Margin="0,0,0,10"/>

            <TextBlock Text="Партнер:" Margin="0,0,0,5"/>
            <ComboBox x:Name="cbPartner" DisplayMemberPath="Name" 
                     SelectedValuePath="Partners_id" Margin="0,0,0,10"/>

            <TextBlock Text="Количество:" Margin="0,0,0,5"/>
            <TextBox x:Name="txtCount" Margin="0,0,0,20"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="btnSave" Content="Сохранить" Click="btnSave_Click" 
                   Width="100" Margin="5"/>
            <Button x:Name="btnCancel" Content="Отмена" Click="btnCancel_Click" 
                   Width="100" Margin="5"/>
        </StackPanel>
    </Grid>
</Page>
